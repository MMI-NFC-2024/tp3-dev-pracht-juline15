---
import * as Plot from "@observablehq/plot";
import PlotFigure from "../../components/PlotFigure.astro";
import penguins from "../../assets/penguins.json";
import Layout from "../../layouts/Layout.astro";

const penguinsGentoo = penguins.filter(({ species }) => species === "Gentoo");
---

<Layout>
    <h1 class="text-3xl">Gentoo Penguins</h1>
    <a class="text-blue-900" href="/un">Retour aux autres penguins</a>

    <PlotFigure
        options={{
            marks: [
                Plot.dot(penguinsGentoo, {
                    x: "culmen_length_mm",
                    y: "culmen_depth_mm",
                    fill: "species",
                }),
            ],
            x: { label: "Culmen length (mm)" },
            y: { label: "Culmen depth (mm)" },
        }}
    />
</Layout>
